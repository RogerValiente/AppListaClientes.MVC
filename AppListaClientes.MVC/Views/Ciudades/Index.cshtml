@model IEnumerable<AppListaClientes.MVC.Models.tblCiudades>

@{
    ViewBag.Title = "Lista Ciudades";
}

<h2>@ViewBag.Title</h2>

<div>
    <a href="@Url.Action("Create", "Ciudades")" class="btn btn-primary mt-2 text-white">Crear Nuevo</a>
</div>

<div class="container-fluid mt-3">
    <div class="card mb-3">
        <div class="card-header badge-dark">
            <i class="fa fa-table"></i> Tabla Ciudades
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="badge-dark text-center">
                        <tr>
                            <th>ID</th>
                            <th>Codigo</th>
                            <th>Cuidad</th>
                            <th>Departamento</th>
                            <th>Fecha Creación</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <th>
                                    @Html.DisplayFor(model => item.IDCiudad)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodigoCiudad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreCiudad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblDepartamentos.NombreDepartamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblDepartamentos.FechaCreacion)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Ciudades", new { id = item.IDCiudad })">
                                        <i class="fa fa-fw fa-edit fa-lg"></i>
                                    </a>|
                                    <a href="@Url.Action("Details", "Ciudades", new { id = item.IDCiudad })">
                                        <i class="fa fa-book fa-lg"></i>
                                    </a>|
                                    <a href="@Url.Action("Delete", "Ciudades", new { id = item.IDCiudad })">
                                        <i class="fa fa-trash fa-lg"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





